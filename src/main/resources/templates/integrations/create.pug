doctype
html(lang="en")
  include ../includes/header
  body
    #layout
      a(href="#menu" id="menuLink" class="menu-link")
        span
      #menu
        include ../includes/menu
        +menu("integrations")
      #main
        .content
          form.pure-form.pure-form-stacked(name="integration" action="/integrations/create" method="POST")
            fieldset
              legend Create a new Integration
              label(for="message") Message
              select(id="message" name="message")
                each message in messages
                    option(value=message.id)= message.code + "-" + message.event
              label(for="sendingApp") Sending Application
              select(id="sendingApp" name="sendingApp")
                each application in applications
                  option(value=application.id)= application.code
              label(for="receivingApp") Receiving Application
              select(id="receivingApp" name="receivingApp")
                each application in applications
                  option(value=application.id)= application.code
              button.pure-button.pure-button-primary(type="submit") Create
  include ../includes/footer