-
  var fields = {
    "legend": "Create a new application",
    "values": [
      {"id": "code", "name": "code", "label": "Code", "type": "input"},
      {"id": "name", "name": "name", "label": "Name", "type": "input"}
    ]
  }

doctype
html(lang="en")
  include ../includes/header
  body
    #layout
      a(href="#menu" id="menuLink" class="menu-link")
        span
      #menu
        include ../includes/menu
        +menu("about")
      #main
        .content
          form.pure-form.pure-form-stacked(name="application" action="/applications/create" method="POST")
            fieldset
              include ../includes/fieldset
              +fieldset(fields)
  include ../includes/footer